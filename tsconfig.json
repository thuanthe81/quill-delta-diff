{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist/",
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "typeRoots": [
    "./typings",
    "../node_modules/@types"
  ],
  "include": ["src/**/*.ts"]
}
